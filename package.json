{
  "name": "knight-desktop",
  "version": "1.0.0",
  "description": "Desktop AI voice assistant - talk to Knight via F13 hotkey",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac --universal"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "menubar": "^9.4.0",
    "node-fetch": "^2.7.0",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "ai.openclaw.knight",
    "productName": "Knight",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "src/**",
      "assets/**"
    ]
  }
}

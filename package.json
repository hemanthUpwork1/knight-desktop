{
  "name": "knight-desktop",
  "version": "1.0.0",
  "description": "Desktop AI voice assistant - talk to Knight via F13 hotkey",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac --universal",
    "test": "node test/run-all-tests.js",
    "test:whisper": "node test/test-whisper.js",
    "test:gateway": "node test/test-gateway.js",
    "test:tts": "node test/test-tts.js",
    "test:e2e": "node test/test-e2e.js",
    "test:gui": "node test/test-gui-hotkey.js"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "form-data": "^4.0.0",
    "menubar": "^9.4.0",
    "node-fetch": "^2.7.0",
    "uiohook-napi": "^1.5.4"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "ai.openclaw.knight",
    "productName": "Knight",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "src/**",
      "assets/**"
    ]
  }
}
